<tr>
    <td class="px-6 py-4 whitespace-nowrap">
        <div class="flex items-center">
            <div class="flex-shrink-0 h-10 w-10">
                <% if(pet.images && pet.images.length >= 1) { %>
                <img
                    class="h-10 w-10 rounded-full"
                    src="<%= pet.images[0].replace('public', '') %>"
                    alt="<%= pet.name
                %>"
                />
                <% } else { %>
                <i class="fas fa-paw text-2xl"></i>
                <% } %>
            </div>
            <div class="ml-4">
                <div class="text-sm font-medium text-gray-900">
                    <%= pet.name %>
                </div>
                <div class="text-sm text-gray-500">
                    <%= pet.breed %>, <%= pet.type %>
                </div>
            </div>
        </div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap">
        <div class="text-sm text-gray-900">
            <%= pet.address ? pet.address.city : null %>
        </div>
        <div class="text-sm text-gray-500">
            <%= pet.address ? pet.address.state : null %>
        </div>
        <div class="text-sm text-gray-500">
            <%= pet.address ? pet.address.country : null %>
        </div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap">
        <span
            class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800"
        >
            Active
        </span>
    </td>
    <% if(isAdmin) { %>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
        <a href="/user/<%= pet.uid %>">
            <i class="fas fa-user text-xl"></i>
        </a>
    </td>
    <% } %>
    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
        <a
            href="/pet/<%= pet._id %> "
            class="text-indigo-600 hover:text-indigo-900"
        >
            <i class="fas fa-edit text-blue-500 text-2xl"></i>
        </a>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
        <a
            href="/pet-profile/delete/<%= pet._id %> "
            class="text-indigo-600 hover:text-indigo-900"
        >
            <i class="far fa-trash-alt text-red-600 text-2xl"></i>
        </a>
    </td>
</tr>
