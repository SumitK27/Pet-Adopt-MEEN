<header class="text-gray-600 body-font">
    <div
        class=" bg-transparent mx-auto flex flex-wrap py-3 flex-col md:flex-row items-center"
    >
        <div 
            class="w-full text-slate-50 dark-mode:text-gray-200 dark-mode:bg-gray-800 "
        >
            <div
                x-data="{ open: false }"
                class="flex flex-col max-w-screen-xl px-4 mx-auto md:items-center md:justify-between md:flex-row md:px-6 lg:px-8"
            >
                <div class="p-4 flex flex-row items-center justify-between">
                    <a
                        href="/"
                        class="text-3xl md:text-base font-semibold tracking-widest rounded-lg focus:outline-none focus:shadow-outline text-indigo-600"
                        style="font-family: lobster"
                    >
                        <i
                            class="fas fa-paw text-md bg-indigo-600 text-center align-middle p-2 w-8 h-8 text-white rounded-full"
                        >
                        </i>
                        Peta
                    </a>
                    <button
                        class="md:hidden rounded-lg focus:outline-none focus:shadow-outline "
                        @click="open = !open"
                    >
                        <i x-show="!open" class="fas fa-bars text-xl"></i>
                        <i x-show="open" class="fas fa-times text-xl"></i>
                    </button>
                </div>
                <%- include("./nav-items") %>
            </div>
        </div>
    </div>
</header>
