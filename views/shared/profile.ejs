<%- include("../includes/head") %> 
<%- include("../includes/navbar") %> 
<title>Adopt Me - Profile</title>
</head>
<body class="bg-slate-200">
    <div class="container mx-auto px-4 pt-8">
        <div class="flex flex-wrap">
           <!-- Sidebar -->
           <section class="w-full md:w-1/6 lg:w-1/4 p-4">
              <div class="bg-white h-full border-transparent rounded-lg shadow-lg">
                 <nav class="p-3">
                    <ul>
                       <!-- Admin -->
                        <% if(locals.isAdmin) { %>
                           <li class="border border-black rounded py-4 px-2 my-2">
                              <a href="/dashboard" class="sidebar-nav-link">
                              <i class="align-middle" data-feather="home"></i>
                              <span class="align-middle">Dashboard</span>
                              </a>
                           </li>
                           <li class="border border-black rounded py-4 px-2 my-2">
                              <a href="/users" class="sidebar-nav-link">
                              <i class="align-middle" data-feather="users"></i>
                              <span class="align-middle">Users</span>
                              </a>
                           </li>
                           <li class="border border-black rounded py-4 px-2 my-2">
                              <a href="/pets" class="sidebar-nav-link">
                              <i class="align-middle" data-feather="heart"></i>
                              <span class="align-middle">Pets</span>
                              </a>
                           </li>
                           <li class="border border-black rounded py-4 px-2 my-2">
                              <a href="/adoptions" class="sidebar-nav-link">
                              <i class="align-middle" data-feather="file-text"></i>
                              <span class="align-middle">Adoptions</span>
                              </a>
                           </li>
                           <li class="border border-black rounded py-4 px-2 my-2">
                              <a href="/messages" class="sidebar-nav-link">
                              <i class="align-middle" data-feather="message-square"></i>
                              <span class="align-middle">Messages</span>
                              </a>
                           </li>
                           <li class="border border-black rounded py-4 px-2 my-2">
                              <a href="/settings" class="sidebar-nav-link">
                              <i class="align-middle" data-feather="settings"></i>
                              <span class="align-middle">Settings</span>
                              </a>
                           </li>
                        <% } %> 

                        <!-- User -->
                        <% if(!locals.isAdmin) { %> 
                       <li class="border border-black rounded py-4 px-2 my-2">
                          <a href="/profile" class="sidebar-nav-link">
                          <i class="align-middle" data-feather="home"></i>
                          <span class="align-middle">Edit Profile</span>
                          </a>
                       </li>
                       <li class="border border-black rounded py-4 px-2 my-2">
                          <a href="/pet-profile" class="sidebar-nav-link">
                          <i class="align-middle" data-feather="home"></i>
                          <span class="align-middle">Pet Profiles</span>
                          </a>
                       </li>
                       <li class="border border-black rounded py-4 px-2 my-2">
                          <a href="/applications class="sidebar-nav-link">
                          <i class="align-middle" data-feather="home"></i>
                          <span class="align-middle">Applications</span>
                          </a>
                       </li>
                       <% } %> 
                    </ul>
                 </nav>
              </div>
           </section>
           <!-- End Sidebar -->

           <!-- Main -->
           <section class="w-full md:w-5/6 lg:w-3/4 p-4">
              <div class="bg-white border-transparent rounded-lg shadow-lg">
                 <div class="bg-blue-700 border-b-2 border-gray-400 rounded-tl-lg rounded-tr-lg p-2">
                    <h5 class="font-bold uppercase text-white">
                       Your Profile
                    </h5>
                 </div>
                 <div class="p-6">
                    <form action="/profile" method="POST">
                     <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                       <section class="flex flex-row flex-wrap">
                          <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                             <label fofirstN="name" class="block text-gray-700 text-sm font-bold mb-2">
                             First Name
                             </label>
                             <input type="text" name="firstName" id="firstName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.firstName !== undefined ? userData.firstName : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                             <label for="middleName" class="block text-gray-700 text-sm font-bold mb-2">
                             Middle Name
                             </label>
                             <input type="text" name="middleName" id="middleName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.middleName !== undefined ? userData.middleName : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                             <label for="lastName" class="block text-gray-700 text-sm font-bold mb-2">
                             Last Name
                             </label>
                             <input type="text" name="lastName" id="lastName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.lastName !== undefined ? userData.lastName : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                              <label for="dob" class="block text-gray-700 text-sm font-bold mb-2">
                              Date of Birth
                              </label>
                              <input type="date" name="dob" id="dob" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.dob !== undefined ? userData.dob : null %>">
                           </div>
                           <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                              <label for="phoneNumber" class="block text-gray-700 text-sm font-bold mb-2">
                              Phone
                              </label>
                              <input type="text" name="phoneNumber" id="phoneNumber" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.phoneNumber !== undefined ? userData.phoneNumber : null %>">
                           </div>
                           <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                              <label for="email" class="block text-gray-700 text-sm font-bold mb-2">
                              Email
                              </label>
                              <input type="email" name="email" id="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.email !== undefined ? userData.email : null %>">
                           </div>
                        </section>
                       <section class="flex flex-row flex-wrap">
                          <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                             <label for="oldPassword" class="block text-gray-700 text-sm font-bold mb-2">
                             Old Password
                             </label>
                             <input type="password" name="oldPassword" id="oldPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                          </div>
                          <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                             <label for="password" class="block text-gray-700 text-sm font-bold mb-2">
                             Password
                             </label>
                             <input type="password" name="password" id="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                          </div>
                          <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                             <label for="confirmPassword" class="block text-gray-700 text-sm font-bold mb-2">
                             Confirm Password
                             </label>
                             <input type="password" name="confirmPassword" id="confirmPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                          </div>
                       </section>
                       <section class="flex flex-row flex-wrap">
                          <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                             <label for="street" class="block text-gray-700 text-sm font-bold mb-2">
                             Street
                             </label>
                             <input type="text" name="street" id="street" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.address !== undefined ? userData.address.street : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                             <label for="city" class="block text-gray-700 text-sm font-bold mb-2">
                             City
                             </label>
                             <input type="text" name="city" id="city" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.address !== undefined ? userData.address.city : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                             <label for="state" class="block text-gray-700 text-sm font-bold mb-2">
                             State
                             </label>
                             <input type="text" name="state" id="state" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.address !== undefined ? userData.address.state : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                             <label for="country" class="block text-gray-700 text-sm font-bold mb-2">
                             Country
                             </label>
                             <input type="text" name="country" id="country" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.address !== undefined ? userData.address.country : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 px-2 sm:w-full md:w-1/2 lg:w-1/3">
                             <label for="postal" class="block text-gray-700 text-sm font-bold mb-2">
                             Postal Code
                             </label>
                             <input type="text" name="postal" id="postal" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.address !== undefined ? userData.address.postalCode : null %>">
                          </div>
                       </section>
                       <div class="flex items-center justify-between">
                          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                          Save
                          </button>
                       </div>
                    </form>
                 </div>
              </div>
           </section>
           <!-- End Main -->
        </div>
     </div>
    <%- include("../includes/footer") %> 
    </body>
</html>