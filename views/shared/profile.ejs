<%- include("../includes/head") %> 
<%- include("../includes/navbar") %> 
<title>Adopt Me - Profile</title>
</head>
<body class="bg-slate-200">
    <div class="container mx-auto px-4 pt-8">
        <div class="flex flex-wrap">
           <!-- Sidebar -->
           <section class="w-full md:w-1/4 p-4">
              <div class="bg-white h-full border-transparent rounded-lg shadow-lg">
                 <div class="sidebar-header">
                    <h3>Dashboard</h3>
                 </div>
                 <nav class="sidebar-nav">
                    <ul>
                       <li class="sidebar-nav-item">
                          <a href="dashboard.html" class="sidebar-nav-link">
                          <i class="align-middle" data-feather="home"></i>
                          <span class="align-middle">Dashboard</span>
                          </a>
                       </li>
                       <li class="sidebar-nav-item">
                          <a href="users.html" class="sidebar-nav-link">
                          <i class="align-middle" data-feather="users"></i>
                          <span class="align-middle">Users</span>
                          </a>
                       </li>
                       <li class="sidebar-nav-item">
                          <a href="pets.html" class="sidebar-nav-link">
                          <i class="align-middle" data-feather="heart"></i>
                          <span class="align-middle">Pets</span>
                          </a>
                       </li>
                       <li class="sidebar-nav-item">
                          <a href="adoptions.html" class="sidebar-nav-link">
                          <i class="align-middle" data-feather="file-text"></i>
                          <span class="align-middle">Adoptions</span>
                          </a>
                       </li>
                       <li class="sidebar-nav-item">
                          <a href="messages.html" class="sidebar-nav-link">
                          <i class="align-middle" data-feather="message-square"></i>
                          <span class="align-middle">Messages</span>
                          </a>
                       </li>
                       <li class="sidebar-nav-item">
                          <a href="settings.html" class="sidebar-nav-link">
                          <i class="align-middle" data-feather="settings"></i>
                          <span class="align-middle">Settings</span>
                          </a>
                       </li>
                    </ul>
                 </nav>
              </div>
           </section>
           <!-- End Sidebar -->

           <!-- Main -->
           <section class="w-full md:w-3/4 p-4">
              <div class="bg-white border-transparent rounded-lg shadow-lg">
                 <div class="bg-gray-300 border-b-2 border-gray-400 rounded-tl-lg rounded-tr-lg p-2">
                    <h5 class="font-bold uppercase text-gray-600">
                       Your Profile
                    </h5>
                 </div>
                 <div class="p-6">
                    <form action="/profile" method="POST">
                     <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                       <section class="flex flex-row gap-4">
                          <div class="flex flex-wrap mb-6 w-1/3">
                             <label for="name" class="block text-gray-700 text-sm font-bold mb-2">
                             First Name
                             </label>
                             <input type="text" name="name" id="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.firstName !== undefined ? userData.firstName : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 w-1/3">
                             <label for="name" class="block text-gray-700 text-sm font-bold mb-2">
                             Middle Name
                             </label>
                             <input type="text" name="name" id="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.middleName !== undefined ? userData.middleName : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 w-1/3">
                             <label for="name" class="block text-gray-700 text-sm font-bold mb-2">
                             Last Name
                             </label>
                             <input type="text" name="name" id="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.lastName !== undefined ? userData.lastName : null %>">
                          </div>
                        </section>
                        <section class="flex flex-row gap-4">
                           <div class="flex flex-wrap mb-6 w-1/3">
                              <label for="phone" class="block text-gray-700 text-sm font-bold mb-2">
                              Phone
                              </label>
                              <input type="text" name="phone" id="phone" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.phoneNumber !== undefined ? userData.phoneNumber : null %>">
                           </div>
                           <div class="flex flex-wrap mb-6 w-1/3">
                              <label for="dob" class="block text-gray-700 text-sm font-bold mb-2">
                              Date of Birth
                              </label>
                              <input type="date" name="dob" id="dob" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.dob !== undefined ? userData.dob : null %>">
                           </div>
                        </section>
                       <div class="flex flex-row gap-4">
                          <div class="flex flex-wrap mb-6 w-1/3">
                             <label for="email" class="block text-gray-700 text-sm font-bold mb-2">
                             Email
                             </label>
                             <input type="email" name="email" id="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.email !== undefined ? userData.email : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 w-1/3">
                             <label for="password" class="block text-gray-700 text-sm font-bold mb-2">
                             Password
                             </label>
                             <input type="password" name="password" id="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                          </div>
                          <div class="flex flex-wrap mb-6 w-1/3">
                             <label for="password" class="block text-gray-700 text-sm font-bold mb-2">
                             Confirm Password
                             </label>
                             <input type="password" name="password" id="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                          </div>
                       </div>
                       <div class="flex flex-row gap-4">
                          <div class="flex flex-wrap mb-6 w-1/3">
                             <label for="street" class="block text-gray-700 text-sm font-bold mb-2">
                             Street
                             </label>
                             <input type="text" name="street" id="street" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.address !== undefined ? userData.address.street : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 w-1/3">
                             <label for="city" class="block text-gray-700 text-sm font-bold mb-2">
                             City
                             </label>
                             <input type="text" name="city" id="city" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.address !== undefined ? userData.address.city : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 w-1/3">
                             <label for="state" class="block text-gray-700 text-sm font-bold mb-2">
                             State
                             </label>
                             <input type="text" name="state" id="state" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.address !== undefined ? userData.address.state : null %>">
                          </div>
                       </div>
                       <div class="flex flex-row gap-4">
                          <div class="flex flex-wrap mb-6 w-1/3">
                             <label for="country" class="block text-gray-700 text-sm font-bold mb-2">
                             Country
                             </label>
                             <input type="text" name="country" id="country" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.address !== undefined ? userData.address.country : null %>">
                          </div>
                          <div class="flex flex-wrap mb-6 w-1/3">
                             <label for="postal" class="block text-gray-700 text-sm font-bold mb-2">
                             Postal Code
                             </label>
                             <input type="text" name="postal" id="postal" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="<%- userData.address !== undefined ? userData.address.postalCode : null %>">
                          </div>
                       </div>
                       <div class="flex items-center justify-between">
                          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                          Save
                          </button>
                       </div>
                    </form>
                 </div>
              </div>
           </section>
           <!-- End Main -->
        </div>
     </div>
    <%- include("../includes/footer") %> 
    </body>
</html>